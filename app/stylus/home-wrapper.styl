.about{

	&__title{
		section-title($brand-red)
	}

	&__description{
		max-width : 970px
		text-align : center
		color : $c9
		ma()
		font-size : 15px
	}

	&__photo{

	}

	&-photo{

		&__item{
			display : block
			text-decoration : none;
			position : relative
			background-color : $brand-primary

			&:before{
				content ''
				display : block
				abs-center()
				opacity : 0
				background linear-gradient(to bottom, $brand-red 0%, $brand-yellow 100%)
				transition .3s ease
				z-index : 1
			}

			img{
				display : block
				transition .3s ease
			}

			&:hover{

				&:before{
					opacity : .9
					transform translate(-10px,-10px)
				}

				img{
					transform translate(-10px,-10px)
				}
			}
		}
	}
}

.numbers{
	background-color : $brand-primary

	&__list{
		display : flex
		flex-wrap wrap
		justify-content : center
	}

	&__item{
		border-right : 1px solid alpha($cf, .3)
		flex 0 0 20%
		color : $cf
		height : 270px
		text-align : center
		padding : 15px 10px
		font-family : $ff-1
		text-transform : uppercase

		h4{
			font-weight : 700
			font-size : 72px
		}

		&:last-child{
			border-right : 0
		}
	}
}

.advantages{

	&__title{
		section-title($brand-red)
	}

	&__list{
		display : flex
		flex-wrap wrap
	}

	&__item{
		$width = 100% / 3
		flex 0 0 $width
		display : flex
		align-items : start

		h3{
			font-weight : 400
			font-size : 14px
			text-transform : uppercase
		}
		p{
			font-size : 15px
			color : $c9
		}
	}

	&__border{
		flex 1 0 100%
		height : 1px
		background : darken($cf,10%)
	}
}