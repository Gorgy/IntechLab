section-title($color = $primary-text){
	text-align : center
	font-family : $ff-2
	font-size : 24px

	span{
		font-family : $ff-1
		display : block
		text-transform : uppercase
		font-size : 30px
		font-weight : 700
	}

	&:after{
		content ''
		display : block
		background-color : $color
		size(60px,3px)
		ma()
	}
}