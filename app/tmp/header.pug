header.header
	.container
		.row
			.col-sm-2
				a.header__logo.title(href="javascript:void(0)") MoGo
			.col-sm-10
				nav.header__menu
					nav.menu
						ul
							for menu in menuList
								+menu__item(menu)

section.welcome
	.swiper-container
		.swiper-wrapper
			for slide in slider
				.swiper-slide(data-name=slide.name)
					h1.welcome__title= slide.title
						span.title= slide.subtitle
					a(href=slide.btnurl).btn.welcome__btn= slide.btntext
		.swiper-pagination.container